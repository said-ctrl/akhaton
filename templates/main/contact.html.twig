{% extends 'base.html.twig' %}

{% block title %}Contact
{% endblock %}

{% block body %}

<nav>

		{% include 'main/header.html.twig' %}
	</nav>


<body class="bg-black text-[#fee035]">
	<div class="container mx-auto p-6">
		<h1 class="text-3xl font-bold mb-6 gold-text">Contactez-nous</h1>
		<form class="bg-gray-800 p-6 rounded-lg shadow-md">
			<div class="mb-4">
				<label class="block text-gold-text text-sm font-bold mb-2" for="name">Nom</label>
				<input class="w-full p-2 rounded bg-black text-gold-text border border-gray-700" type="text" id="name" name="name" required>
			</div>
			<div class="mb-4">
				<label class="block text-gold-text text-sm font-bold mb-2" for="email">Email</label>
				<input class="w-full p-2 rounded bg-black text-gold-text border border-gray-700" type="email" id="email" name="email" required>
			</div>
			<div class="mb-4">
				<label class="block text-gold-text text-sm font-bold mb-2" for="message">Message</label>
				<textarea class="w-full p-2 rounded bg-black text-gold-text border border-gray-700" id="message" name="message" rows="4" required></textarea>
			</div>
			<button class="bg-gold-text text-white px-4 py-2 rounded hover:bg-yellow-600" type="submit">Envoyer</button>
		</form>
	</div>


</body>

{% endblock %}

